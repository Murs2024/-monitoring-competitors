# OpenAI — только для анализа изображений (и PDF при появлении)
OPENAI_API_KEY=sk-...
OPENAI_VISION_MODEL=gpt-4o-mini

# DeepSeek — для анализа текста и распарсенных страниц (КонсультантПлюс и т.п.)
DEEPSEEK_API_KEY=sk-...
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Сервер (по желанию)
API_HOST=0.0.0.0
API_PORT=8000

# История
HISTORY_FILE=history.json
MAX_HISTORY_ITEMS=10

# Парсер
PARSER_TIMEOUT=10
# Selenium для страниц с JavaScript (КонсультантПлюс и т.п.)
USE_SELENIUM=false
PARSER_SELENIUM_WAIT=5
